#logo
    .circle_top
	animation: circle_top 6s infinite ease-in-out;
	stroke-linecap: round;
	stroke-dasharray: 0, 0, 450, 1332.36547852;
	stroke-dashoffset: 0;
	stroke-linejoin: round;

