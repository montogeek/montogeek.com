	animation: triangle_top 6s infinite ease-in-out;
	stroke-linecap: round;
	stroke-dasharray: 0, 0, 156.1330362955729, 312.2660725911458;
	stroke-dashoffset: 0;
	stroke-linejoin: round;

    .triangle_bottom
	animation: triangle_bottom 6s infinite ease-in-out;
	stroke-linecap: round;
	stroke-dasharray: 0, 0, 156.49176025390625, 312.9835205078125;
	stroke-dashoffset: 0;
	stroke-linejoin: round;

